/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {}

/* Product List */
.productList {}

/* Product Card */
.productCard {}

/* Start of test code */
/* Media Queries */
/* Mobile */
@media only screen and (min-device-width : 320px) and (max-device-width : 767px) {
/* Styles */
.collectionHero {
  height: 15vh;

  .collection-banner-title {
    font-size: 24px;
  }
}

.productsListItems {
  margin: 10px 10px;
  flex-direction: column;
  align-items: center;

.productCard {
  margin: 25px;
  max-width: 300px;

  .productCardImage {
    width: 300px;
    height: 300px;
}
}
}
}

/* tablet */
@media only screen and (min-device-width : 768px) and (max-device-width : 1223px) {
/* Styles */
.collectionHero {
  height: 25vh;

  .collection-banner-title {
    font-size: 28px;
  }
}

.productsList {
  .productsListNavigationIndex {
    font-size: 16px;
  }

  .productsListNavigation {
    font-size: 16px;
  }
}

.productsListItems {
  margin: 30px 30px;

.productCard {
  margin: 25px;

  .productCardImage {
    width: 300px;
    height: 300px;
}
}
}
}

/* Desktops and laptops */
@media only screen  and (min-width : 1224px) {
/* Styles */
.collectionHero {
  height: 45vh;
  
  .collection-banner-title {
    font-size: 36px;
  }
}

.productsListItems {
  margin: 50px 50px;

.productCard {
  margin: 25px;

  .productCardImage {
    width: 325px;
    height: 325px;
}

.productCardAddToCartBtn {
  opacity: 0;
}

.productCardImage:hover .productCardAddToCartBtn {
  opacity: 1;
}

.productCardAddToCartBtn {
  transition: all 0.25s ease-in-out;
}
}
}
}

/* Large screens ----------- */
@media only screen  and (min-width : 1824px) {
  /* Styles */
  .collectionHero {
    height: 45vh;
    
    .collection-banner-title {
      font-size: 36px;
    }
  }
  
  .productsListItems {
    margin: 50px 50px;
  
  .productCard {
    margin: 25px;
  
    .productCardImage {
      width: 500px;
      height: 500px;
  }

  .productCardAddToCartBtn {
    opacity: 0;
  }
  
  .productCardImage:hover .productCardAddToCartBtn {
    opacity: 1;
  }
  
  .productCardAddToCartBtn {
    transition: all 0.25s ease-in-out;
  }
  }
  }
  }

/* Media Queries End */

.hero-banner {
  width: 100vw;
}

.collectionHero {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

  .collection-banner-title {
    width: auto;
    color: #fff;
  }
}

.productsList {
  .productsListItems {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: auto;
  }

  .productsListNavigationIndex {
    display: flex;
    justify-content: center;
    margin: 35px 0px;
  }

  .productsListNavigation {
    display: flex;
    padding-bottom: 5vh;
    position: relative;
  
    a {
      color: black;
      margin: 0px 10px;
    }
  
    a:first-child {
      width: 75px;
      position: absolute;
      left: 50%;
      transform: translate(-150%, 0);
    }
  
    a:last-child {
      width: 75px;
      position: absolute;
      left: 50%;
      transform: translate(30%, 0);
    }
  
    span {
      position: absolute;
      left: 50%;
      transform: translate(-50%, 0);
    }
  }
}

.productCard {
  .productCardDescription {
    display: flex;
    
    span:first-child {
      margin-right: 10px;
    }

    span:last-child {
      margin-left: 10px;
    }
  }
  
  .productCardImage {
    position: relative;

    .productCardAddToCartBtn:hover {
      transform: scale(1.2);
    }
    
    .productCardAddToCartBtn {
      background-image: url("../assets/icon-shopping-cart.png");
      background-size: 25px;
      background-repeat: no-repeat;
      background-position: center;
      width: 40px;
      height: 40px;
      background-color: #fff;
      border: none;
      position: absolute;
      bottom: 10px;
      right: 10px;
    }
  }
  
  .productCardHeader {
    display: flex;
    justify-content: space-between;
    margin: 10px 0px;

    .productCardTitle {
      font-weight: bold;
      font-size: 16px;
    }
  }
}