/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}
.container{
  margin: 0 25px;
}

/* Collection hero */
.collectionHero {}

.collectionHero_main{

}
.collection_pagination{
  text-align: center;
  margin: 15px;
}
.collectionHero_title{
  position: absolute;
    top: 50%;
    left: 43%;
}
.collectionHero_title h2{
  color: #FFFFFF;
}

/* Product List */
.productList {

}
.productsList_main{
  margin-left: auto;
  margin-right: auto;
  margin-top: 60px;
  max-width: 1200px;
}
.collection_grid{
  align-items: flex-start;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.product_image{
  max-width: 100%;
}
.current_page {
  border-radius: 50%;
  width: 10px;
  height: 10px;
  padding: 3px;
  background: #000;
  border: 3px solid #000;
  color: #000;
  text-align: center;
  color: #fff;
}



/* Product Card */
.productCard {}

.product_info{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.product_wrapper{
  margin: 15px;
  width: 30%;
}
.product_image-wrapper{
  position: relative;
}
.add_to_cart_btn{
  width: 35px;
  margin-top: 3px;
}
.add_to_cart_wrapper{
  position: absolute;
  right: 10px;
  bottom: 10px;
  width: 41px;
  height: 41px;
  background-color: #fff;
  text-align-last: center;
}
.hide{
  display: none;
}
.product_image-wrapper:hover .hide{
  display: block;
}
.product_title{
  width: 80%;
}
.product_price{
  width: 20%;
  text-align: right;
}
.product_color{
  margin: 0;
}
@media (max-width: 900px) {
  .product_wrapper{
    width: 29%;
  }
}
@media (max-width: 768px) {
  .product_wrapper{
    width: 41%;
  }
  .hide{
  display: block;
  }
}
@media (max-width: 375px) {
  .product_wrapper{
    width: 100%;
  }
}
