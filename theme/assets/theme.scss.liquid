/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {
  position: relative;
  display: flex;
  justify-content: center;
  overflow: hidden;
  width: 100%;
  min-height: 220px;
  max-height: 275px;

  img {
    flex: none;
    object-fit: cover;
    margin-bottom: 0;
  }

  @media only screen and (min-width: 800px) {
    overflow: hidden;
    max-height: unset;

    img {
      width: 100%;
    }
  }

  .collectionHeroTitle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    
    h1 {
      color: $colour-white;
      text-shadow: 0 0 4px #000;
    }
  }
}

/* Product List */
.productList {
  display: flex;
  justify-content: center;
}

.productList form {
  display: flex;
  flex-flow: wrap row;
  padding: 50px;
  max-width: 1200px;
}

/* Product Card */
.productCard {
  margin: 30px 20px 20px;
  width: 100%;

  @media screen and (min-width: 576px) {
    width: calc(50% - 40px);
  }

  @media screen and (min-width: 768px) {
    width: calc(33.33% - 40px);
  }
  
  p {
    margin: 0;
  }

  .productImageContainer {
    position: relative;

    .addToCart {
      width: 50px;
      height: 50px;
      position: absolute;
      bottom: 0;
      right: 0;
      background: $colour-white; 
      border: none;
      padding: 10px;
     
      @media screen and (min-with: 768px) {
        display: none;
      }

      &:hover {
        cursor: pointer;
      }
    }
  }

  .productTitlePrice {
    display: flex;
    justify-content: space-between;
    color: $colour-primary;
    margin: 15px 0 5px 0;
  }

  .productInfo {
    display: flex;
    font-size: 14px;
    color: $colour-grey;
  }
}
