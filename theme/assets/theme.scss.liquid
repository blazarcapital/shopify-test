/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {
  margin-bottom: 20px;
  h1 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    font-size: 40px;
    font-weight: 600;
    text-shadow: 3px 3px 3px #ffffff;
    @media screen and (max-width: 426px) {
      font-size: 28px;;
    }
  }
}

/* Product List */
.productsList {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin-bottom: 20px;
  grid-auto-rows: minmax(100px, auto);
  width: 90%;
  margin: auto;
  @media screen and (max-width: 768px) {
    grid-template-columns: repeat(2, 1fr);
  }
  @media screen and (max-width: 426px) {
    grid-template-columns: repeat(1, 1fr);
  }
  &.pagination {
    margin: 40px auto;
    display: flex;
    justify-content: center;
    a {
      margin: 0 5px;
      color: black;
      text-decoration: none;
      &.active-page {
        text-decoration: underline;
      }
    }
  }
}

/* Product Card */
.productCard {
  background: #f9f9f9;
  padding: 20px;
  border: 1px solid $colour-grey;
  border-radius: 3px;
  img {
    padding: 20px;
  }
  h3 {
    margin: 20px 0;
    font-size: 18px;
    font-weight: 600;
    a {
      color: black;
    }
  }
  .productCard--info {
    span {
      display: block;
    }
  }
  .productCard--price {
    text-align: center;
    font-weight: 600;
    font-size: 16px;
  }
  button {
    width: 100%;
    display: block;
    background-color: $colour-primary;
    border: none;
    padding: 20px;
    color: $colour-white;
    text-align: center;
    font-size: 16px;
    cursor: pointer;
    opacity: 0;
    transition: all .2s;
    @media screen and (max-width: 426px) {
      opacity: 1;
    }
  }
  &:hover {
    button {
      opacity: 1;
    }
  }
}
