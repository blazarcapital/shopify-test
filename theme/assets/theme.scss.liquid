/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;
$colour-black: #000;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {
}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionTitle__centered {
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 6rem;
  font-weight: 300;
  color:white;
  transform: translate(-50%, -50%);
}

.collection__container{
  position: relative;
  text-align: center;
}

.collection-image {
  object-fit: cover;


  @media (min-width: 768px) {  
    height: 350px;
    width: 100%;
  }
}

/* Product List */

.list__container{
  margin-top: 3rem;
  margin-left: 5%;
}
.grid__container {
  display: grid;
  grid-template-columns: auto;
  @media (min-width: 768px) {  
  grid-template-columns: auto auto auto;  
  }
}
.grid__item {
  padding: 10px;
  text-align: center;
  max-width: 500px;
  max-height: 500px;

}

.pagination__container{
  margin: 0 auto;
  text-align: center;
}
.pagination {
  display: inline-block;
}

.pagination span {
  color: $colour-black;
  float: left;
  padding: 8px 16px;
  text-decoration: none;
}

/* Product Card */
.productCard__title{
float:left;
font-size: 1.5rem;
}

.producCard__size_color{
float: left;
}
.productCard__grid{
  display: grid;
  grid-template-columns: auto;
}

.productCard__grid_item {
  text-align: left;
}
.productCard__addToCart{
  position: absolute;
  top: 90%;
  left: 90%;
  transform: translate(-50%, -50%);
}

.btn span.icon {
  background: url("icon-shopping-cart.png") no-repeat;
  background-size: contain;
  background-position: center;
  padding: 1.2rem;
}
.productCard__button{
  padding: 1.2rem;
  border: 1px $colour-white;
  border-radius: 2px;
  background: $colour-white;
}

.productCard__button:hover{
  cursor:pointer;
}

.productCard{
  position: relative;
  text-align: center;
  color: $colour-white;
  max-width: 450px;
  max-height: auto;
}

.productCard_content{
  text-align: center;
}
.productCard__image{
  position: relative;
  text-align: center;

  margin:auto;
  max-width: 500px;
  max-height: auto;
  background-position: center center;
  background-repeat: no-repeat;
  }

.productCard__image a:hover{
  cursor:default;
}

.productCard__price{
    font-size: 1.5rem;
    color: $colour-black;
    font-weight: 700;
    margin: 0;
    float:right
  }

