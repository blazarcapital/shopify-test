/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}
.italics{
  font-style: italic;
}
.bold{
  font-weight: bold;
}
/* Containers */
.main {
}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {
  position: relative;
  h1{
    text-align: center;
    position: absolute;
    font-size: 3em;
    color: $colour-white;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}

/* Product List */
.productsList {
  padding: 40px;
}
/* Product Card */
.productCard {
  position: relative;
  width: 33.3%;
  padding: 10px;
  float:left;
  p{
    margin: 0;
    padding: 0;
  }
  .left{
    text-align:left;
    float: left;
  }
  .right{
    text-align: right;
  }
  .addToCart{
    position: absolute;
    background: white;
    display: none;
    padding: 5px;
    right: 20px;
    bottom: 50px;
    cursor: pointer;
    img{
      width: 30px;
      height: 30px;
    }
  }
  @media (max-width: 760px) {
    width: 100%;
  }
}
.productCard:hover{
  .addToCart{
    display: block;
  }
}
