/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* Breakpoints */
$breakpoint-tablet: 768px;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 5px 0 10px;
}

p {
  margin: 0;
  padding: 0;
  font-size: 1.4rem;
}

h2 {
  font-size: 1.8rem; 

  @media (min-width: $breakpoint-tablet) {
    font-size: 2.5rem; 
  }
}

p {
  font-size: 1.2rem;

  @media (min-width: $breakpoint-tablet) {
    font-size: 1.4rem;
  }
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {}

.productContainer {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 20;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {
  img {
    width: 100%;
    object-fit: cover;
    height: 100%;
  }

  &::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.3);
  }

  .heroContent {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;

    .heroHeader {
      color: $colour-white;
      font-size: 3rem;
    }
  }
}

.productList {
  margin-left: auto;
  margin-right: auto;
  max-width: 1200px; 
  display: grid;
  grid-template-columns: repeat(1, 1fr); 
  grid-column-gap: 20px;
  grid-row-gap: 20px;

  // Tablets and small desktops
  @media (min-width: $breakpoint-tablet) {
    grid-template-columns: repeat(2, 1fr); 
  }

  // Larger desktops
  @media (min-width: 1024px) {
    grid-template-columns: repeat(3, 1fr); 
  }
}

/* Product Card */
.productCard {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
}

.titleAndPrice {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.productImage {
  position: relative;
}

.miniCartProductCard {
  position: absolute;
  bottom: 5px;
  right: 5px;
  display: none; /* initially hidden */
  align-items: center;
  background-color: #fff;
  padding: 5px;
  z-index: 2;

  .miniCart_icon {
    max-height: 25px;
    height: 100%;
    width: auto;
    margin-right: 5px;
    transition: transform 0.3s ease;

    @media (min-width: $breakpoint-tablet) {
      &:hover {
        transform: translateX(5px);
      }
    }
  }

  .miniCart_count {
    font-size: 1.2rem;
  }
}

.productCard:hover {
  .miniCartProductCard {
    display: block; 
    cursor: pointer;
  }
}

@media (max-width: $breakpoint-tablet) {
  .productCard {
    .miniCartProductCard {
      display: block; 
    }
  }
}

/* Pagination styling */
.paginationContainer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px 0;
  list-style-type: none;

  .paginationItem {
    padding: 0 12px;
    height: 32px;
    text-align: center;
    margin: auto 4px;
    color: rgba(0, 0, 0, 0.87);
    display: flex;
    align-items: center;
    box-sizing: border-box;
    letter-spacing: 0.01071em;
    border-radius: 16px;
    line-height: 1.43;
    font-size: 13px;
    min-width: 32px;

    &:hover:not(.current) {
      background-color: rgba(0, 0, 0, 0.04);
      cursor: pointer;
    }
  }
}