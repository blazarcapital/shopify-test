/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {
  font-size: 2.5rem;
  font-family: $font-header;
  height: 25rem;
  color: white;
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* Product List */
.productsList {
  padding: 2rem;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

/* Product Card */
.productCard {
  padding: 1rem;
  flex: 1 0 97%;

  & .productCart_image {
    position: relative;

    & .productCart_image_cart {
      position: absolute;
      width: 2rem;
      bottom: 1rem;
      right: 1rem;
      cursor : pointer;
    }
  }

  & .productCart_mainInfo {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    & .productCart_mainInfo_title {
      font-weight: 600;
    }
  }

  & .productCart_subtitle {
    font-style: italic;
  }

  @media (min-width: 768px) {
    flex: 1 0 33%;
    max-width: 33%;

    & .productCart_image {
      & .productCart_image_cart {
        display: none;  
      }

      &:hover {
        & .productCart_image_cart {
          display: block;
        }
      }
    }
  }
}

/* pagination */ 
.productsListPagination {
  font-weight: 500;
  font-size: 2rem;
  text-align: center;
  padding: 0 0 2rem;

  & a {
    color: $colour-primary;
    text-decoration: none;

    &:hover {
      text-decoration: underline;
    }
  }

  & .page {
    margin: 0 1rem;

    &.current {
      text-decoration: underline;
    }
  }
}
