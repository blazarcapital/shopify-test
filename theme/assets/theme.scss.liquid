/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a,
a:active,
a:hover,
a:visited {
  text-decoration: none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img,
picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {
  position: relative;

  h1 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: $colour-white;
    text-align: center;
    font-size: 5rem;

    @media screen and (max-width: 480px) {
      font-size: 3rem;
    }
  }
}

/* Product List */
.productsList {
  max-width: 144rem;
  margin: 3rem auto;
  padding: 0 3rem;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 3rem;

  @media screen and (max-width: 768px) {
    grid-template-columns: 1fr;
  }
}

/* Product Card */
.productCard {
  a {
    position: relative;
    display: block;

    &:hover .productCard__atc {
      display: block;
    }

    .productCard__atc {
      display: none;
      position: absolute;
      z-index: 1;
      bottom: 0.5rem;
      right: 0.5rem;
      background-color: $colour-white;
      border: none;
      padding: 1rem;
      cursor: pointer;

      @media screen and (max-width: 768px) {
        display: block;
      }
    }
  }

  .productCard__meta {
    display: flex;
    align-items: center;
    justify-content: space-between;

    h2 {
      margin: 0;
    }
  }

  .productCard__variants p {
    margin: 0;
    font-style: italic;
  }
}

/* Pagination */
.pagination {
  padding: 0;
  list-style-type: none;
  display: flex;
  justify-content: center;
  align-items: center;

  .pagination__text {
    margin: 0 1.3rem;
  }

  .pagination__button {
    border: none;
    background-color: $colour-primary;
    color: $colour-white;
    cursor: pointer;
    padding: 1rem 1.3rem;

    &:disabled {
      cursor: auto;
      opacity: 0.7;
    }
  }
}
