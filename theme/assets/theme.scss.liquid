/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap');

/* Fonts */
$font-header: Cardo, 'Helvetica Neue', Helvetica, sans-serif;
$font-body: Lato, 'Helvetica Neue', Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a, a:active, a:hover, a:visited {
  text-decoration: none;
  color: $colour-primary;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img, picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {
  .collection_title {
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color:white;
    font-size:45px;
    font-weight: 500;
  }
}

/* Product Card */
.productCard-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-gap:20px;
  margin: 2.5% 2.5% 0 2.5%;
    .productCard {
      position: relative;
    }
    .product-info{
      margin-top: 10px;
    }
    .cart_icon {
      position: absolute;
      width: 30px;
      bottom: 85px;
      z-index: 100;
      right: 20px;
    }
    .product_title {
      font-size:20px;
      font-weight: bold;
    }
    .product_price {
      font-size:20px;
      float:right;
    }
    .product_meta {
      font-size:15px;
      font-style: italic;
      margin-top: 5px;
    }
    .add_to_cart {
      display: none;
      background: url(https://cdn.shopify.com/s/files/1/0259/0428/3745/t/27/assets/icon-shopping-cart_30x.png?v=7365348165843707859);
      background-size: 50% 50%;
      background-color: white;
      background-repeat: no-repeat;
      background-position: center center;
      width: 40px;
      height: 40px;
      border: none;
      position: absolute;
      right: 10px;
      bottom: 70px;
    }
    .productCard:hover {
      .add_to_cart{
        display: block;
        cursor: pointer;
      }
     }
    }
.pagination {
  text-align:center;
  font-size: 20px;
  margin-top: 40px;
  margin-bottom: 40px;
}
@media (max-width:768px) {
  .productCard-wrapper {
    grid-template-columns: 1fr;
  }
  .add_to_cart {
    display: block!important;
  }
  .productCard {
    margin: 20px 10px 0px 10px;
  }
}
@media (min-width:768px) and (max-width:1100px) {
  .productCard-wrapper {
    grid-template-columns: 1fr 1fr;
  }
 }