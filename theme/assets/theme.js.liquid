$(function(){
    $('.productCard__addBtn').on('click', function(){
        var obj = $(this);
        console.log($(this).attr("data-variant"))
        $.ajax({
            type: 'POST',
            url: '/cart/add.js',
            data: {
                quantity: 1,
                id: $(this).attr("data-variant")
            },
            dataType: 'json',
            success: function () {
                jQuery.getJSON('/cart.js', function(cart) {
                    console.log(cart.item_count)
                    $('.miniCart_count').html(cart.item_count);
                });
            }
        });
    });
});